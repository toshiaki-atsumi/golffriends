<h1>requests#edit</h1>

<table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>会の名前</th>
        <th>申請者名</th>
        <th>申請理由</th>
        <th>申請状況</th>
        <th>申請日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @request.id %></td>
        <td><%= Party.find(@request.party_id).name %></td>
        <td><%= Member.find(@request.member_id).name %></td>
        <td><%= @request.content %></td>
        <td><%= @request.status %></td>
        <td><%= @request.created_at.to_date %></td>
        <td><%= @request.updated_at.to_date %></td>
      </tr>
    </tbody>
  </table>
 <div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model:@request, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group col-sm-6">
        <%= f.label :status,'審査'%>
        <%= f.radio_button :status,'承認' %>承認
        <%= f.radio_button :status,'拒否' %>拒否
      </div>
      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div> 
