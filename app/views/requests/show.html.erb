<h1>入会申請状況</h1>

<table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>会の名前</th>
        <th>申請状況</th>
        <th>申請日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
     <% @requests.each do |request| %>
        <tr>
          <td><%= link_to request.id,request_path(request.id) ,method: :delete, data: { confirm: "申請を取り消しますか?" } %></td>
          <td><%= Party.find(request.party_id).name %></td>
          <td><%= request.status %></td>
          <td><%= request.created_at.to_date %></td>
          <td><%= request.updated_at.to_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
