<h1>Schedules#show</h1>
<p>Find me in app/views/schedules/show.html.erb</p>
<table class="table table-striped border ">
  <h1>出欠状況一覧</h1>
  <thead>
  </thead>
    <tbody>
     <% @schedules.each_with_index do |schedule,i| %>  
        <tr>
          <td><%= link_to schedule.id,participant_path(schedule.id) %></td>
          <td><%= schedule.date.strftime("%y/%m/%d")+"("+%w(日 月 火 水 木 金 土)[schedule.date.wday]+")" %></td>
          <% schedule.mark.each_with_index  do |mark ,j| %>
             <td><%= schedule.mark[j] %></td>
          <% end %>
          <td><%= schedule.comment  %></td>
          
        </tr> 
        <tr>
           <td><% "12345" %></td>
           <td><%= "人数" %></td>
           <% schedule.mark.each_with_index  do |mark ,j| %>
             <td><%= @p_count[i][j] %></td>
           <% end %>  
        </tr>
 
     <% end %>
    </tbody>
  </table>
<%= paginate @schedules %> 
