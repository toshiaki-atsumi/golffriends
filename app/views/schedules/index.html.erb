<table class="table table-striped border="1" ">
  <h1>スケジュール一覧</h1>
  <thead>
      <tr>
        <th>プレー日</th>
        <th>ﾏｰｸ</th>
        <th>コメント</th>
      </tr>
  </thead>
    <tbody>
     <% @schedules.each do |schedule| %>  
        <tr>
          <td><%= link_to schedule.date.strftime("%y/%m/%d")+"("+%w(日 月 火 水 木 金 土)[schedule.date.wday]+")",edit_schedule_path(schedule.id)  %></td>
          <td><%= schedule.mark %></td>
          <td><%= schedule.comment  %></td>
        </tr> 
      <% end %>
    </tbody>
  </table>
<%= paginate @schedules %> 
