<h1>Members#edit</h1>
<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @member, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '氏名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :birthdate, '生年月日' %>
        <%= f.text_field :birthdate, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :gender, '性別' %>
        <%= f.text_field :gender, class: 'form-control' %>
      </div>  
      
       <div class="form-group">
        <%= f.label :email, 'メールアドレス（必須）' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :email1, 'メールアドレス１' %>
        <%= f.email_field :email1, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :tel, '電話番号' %>
        <%= f.text_field :tel, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :tel1, '電話番号１' %>
        <%= f.text_field :tel1, class: 'form-control' %>
      </div>
      

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
