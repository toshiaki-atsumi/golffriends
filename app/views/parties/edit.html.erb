<div class="text-center">
  <h1>会の編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model:@party, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      <div class="form-group">
        <%= f.label :name, '会の名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :president, '会長' %>
        <%= f.text_field :president, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :content, '会の説明' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>  
      
      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      </div>
      <%= hidden_field_tag :member_id, current_member.id %>
      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>